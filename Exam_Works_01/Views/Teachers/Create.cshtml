@model Exam_Works_01.ViewModels.TeachersViewModel
@{
    ViewBag.Title = "Teacher-Create";
}

@using (Html.BeginForm("Create", "Teachers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h4>Create New Teachers:</h4>
    <div class="form-group row mb-2">
        @Html.LabelFor(e => e.Teacher_Name, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
        <div class="col-5">
            @Html.TextBoxFor(e => e.Teacher_Name, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(e => e.Teacher_Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-2">
        @Html.LabelFor(e => e.Email, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
        <div class="col-5">
            @Html.TextBoxFor(e => e.Email, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(e => e.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group row mb-2">
        @Html.LabelFor(e => e.ClassStartDate, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
        <div class="col-5">
            @Html.TextBoxFor(e => e.ClassStartDate, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(e => e.ClassStartDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-2">
        @Html.LabelFor(e => e.SubjectId, new { @class = "col-form-label col-form-label-sm text-end col-2" })
        <div class="col-5">
            @Html.DropDownListFor(e => e.SubjectId, new SelectList(ViewBag.Subjects, "SubjectId", "Subject_Name"), "Select Subject", new { @class = "form-select form-select-sm" })
            @Html.ValidationMessageFor(e => e.SubjectId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-2">
        @Html.LabelFor(e => e.Picture, new { @class = "col-form-label col-form-label-sm text-end col-2"})
        <div class="col-5">
            @Html.TextBoxFor(e => e.Picture, new { @class = "form-control form-control-sm", type = "file" })
            @Html.ValidationMessageFor(e => e.Picture, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-4">

        <div class="col-10 offset-2">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
}
<div class="row">
    <div class="col">
        <a href="@Url.Action("index", "Teachers")"><i class="fa fa-backward"></i>Back to Index</a>
    </div>
</div>

@section styles {
    <link href="~/Content/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" type="text/css" />
}
@section scripts {
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $("#ClassStartDate").datepicker({
            format: 'yyyy-mm-dd'
        });
    </script>
}


