@model SubjectWebApplictions.Models.Subject
@{
    ViewBag.Title = "Subject-Edit";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(b => b.SubjectId)
    <h4>Edit Branch:</h4>
    <div class="form-group row mb-2">
        @Html.LabelFor(b => b.Sub_Name, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
        <div class="col-5">
            @Html.TextBoxFor(b => b.Sub_Name, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(b => b.Sub_Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-2">
        @Html.LabelFor(b => b.Sub_Code, new { @class = "col-form-label col-form-label-sm text-end col-2" })
        <div class="col-5">
            @Html.TextBoxFor(b => b.Sub_Code, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(b => b.Sub_Code, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-3">

        <div class="col-10 offset-2">
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </div>
}
<div class="row">
    <div class="col">
        <a href="@Url.Action("index", "Subjects")"><i class="fa fa-backward"></i>Back to Index</a>
    </div>
</div>

@section styles {
    <link href="~/Content/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/main.css" rel="stylesheet" type="text/css" />
}
@section scripts {
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

